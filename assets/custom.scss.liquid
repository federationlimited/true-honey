/*================ VARIABLES ================*/
/*============================================================================
  Grid Breakpoints and Class Names
    - Do not change the variable names
    - Breakpoint pixel values are used in the window.theme.breakpoints object
    - These values are hard-copied within `search.js` and must be kept in sync!
==============================================================================*/
$grid-medium: 750px;
$grid-large: 990px;
$grid-widescreen: 1400px;
$grid-gutter: 30px;
$grid-gutter-mobile: 22px;

/*================ typography ================*/

.h1, .h2, .h3, .h4, .h5, .h6 {
  text-transform: none;
  letter-spacing: 0;
  &:after {
    content: "";
    background-image: url(https://cdn.shopify.com/s/files/1/0257/7331/0001/files/glyph.png?v=1597098893);
    display: inline-block;
    margin-left: 0.05em;
    background-size: 100%;
  }
}
.h2 {
  font-size: 60px;
  margin-bottom: 25px;
  &:after {
    width: 10px;
    height: 11px;
  }
}
.h3 {
  font-size: 48px;
  margin-bottom: 25px;
  &:after {
    width: 10px;
    height: 11px;
  }
}


/*================ header.liquid ================*/

.site-header {
  position: relative;
  z-index: 1;
  background-color: transparent;
  
  @media (min-width: $grid-medium) {
    // height: 140px;
  }
  .site-nav.list--inline li {
    @media (min-width: $grid-medium) {
      padding: 0 0;
    }
    @media (min-width: $grid-large) {
      padding: 0 0;
    }
    @media (min-width: $grid-widescreen) {
      padding: 0 10px;
    }
  }
  .site-nav__label {
    text-transform: uppercase;
    font-size: 18px;
  }
  .site-nav__dropdown {
    background-color: #fff;
  }
}

