/*================ footer.liquid ================*/

.site-footer {
  padding-top: 0;
  @media (min-width: $grid-medium) {
    padding-top: 0;
  }
}
.site-footer__social-icons {
 padding-top: 0;
 @media (min-width: $grid-medium) {
  padding-top: 0;
 }
}
.site-footer__newsletter-container {
  background-color: #eee9e0;
  padding-top: 45px;
  @media (min-width: $grid-medium) {
    padding-top: 55px;
   }
   h2 {
     color: #231f20;
   }
   p {
     color: #626262;
   }
}
.site-footer__links-container {
  padding-top: 45px;
  padding-bottom: 45px;
  @media (min-width: $grid-medium) {
    padding-top: 55px;
    padding-bottom: 45px;
   }
  p {
    line-height: 2;
  }
  a {
    color: #eee9e0;
    &:hover {
      color: #847453;
    }
  }
}
.site-footer__social-icons {
  text-align: left;
}
.social-icons__item {
  padding: 0 5px;
  @media (min-width: $grid-medium) {
    padding: 0 5px;
   }
   @media (min-width: $grid-large) {
    padding: 0 10px;
   }
  &:first-child {
    padding-left: 0;
  }
}
.site-footer h4, .site-footer .h4 {
  font-family: "Work Sans", sans-serif;
  font-style: normal;
  font-weight: 500; /* medium */
  color: #847453;
  margin-bottom: 5px;
}
.site-footer__copyright-content {
  display: inline-block;
  padding: 31px 25px 31px 0;
  &:last-child {
    padding-right: 0;
  }
  a {
    color: #eee9e0;
  }
}
.site-footer-item-tall {
  @media (min-width: $grid-medium) {
    margin-bottom: 0;
    height: auto;
  }
}

.site-footer__footer-logo-link {
  vertical-align: middle;
  display: inline-block;
  &:first-child {
    margin-left: 0;
  }
  @media (min-width: $grid-large) {
    margin-left: 20px;
  }
  @media (min-width: $grid-widescreen) {
    margin-left: 40px;
  }
}

