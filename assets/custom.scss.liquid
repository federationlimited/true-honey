 }
}

/*================ Reviews app ================*/
.spr-reviews {
  display: flex;
  .spr-review {
    flex: 0 1 33.333333%;
    padding-right: 24px;
    &:first-child {
      margin-top: 0;
    }
  }
  .spr-pagination {
    position: absolute;
    right: 0;
    top: 0;
  }
  .spr-pagination-next {
    position: relative;
  }
  .spr-pagination-prev {
    position: relative;
  }
}