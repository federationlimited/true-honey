{% for block in section.blocks %}
  {% if block.settings.pages-where-included contains page.handle %}
  <!-- Content that I'd like to reuse across pages and sometimes customize -->
  <img src="{{ block.settings.image | img_url: '600x' }}">
  {% endif %}
{% endfor %}

{% schema %}
{
  "name": "Footer styles",
  "blocks": [
  {
    "type": "Footer-styles",
    "name": "Styles in footer block",
    "settings": [
    {
      "type": "textarea",
      "id": "styles-where-included",
      "label": "Styles to include this in"
    },
    {
      "id": "image",
      "type": "image_picker",
      "label": "Choose image"
    }
    ]
  }
  ]
}
{% endschema %}
